<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="16dp"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnBrowseFoto"
            style="@style/ItemsTouchable"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:cardBackgroundColor="#1A2E09D1"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgUpload"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_upload"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgUpload"
                    android:layout_centerHorizontal="true"
                    android:text="Unggah Bukti"
                    android:textColor="@color/color_text_2"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivUploaded"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="5dp"
                    android:scaleType="centerCrop" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBrowseFoto"
            android:gravity="end"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Format file: .jpg / .jpeg / .png"
            android:textColor="@color/color_text_2" />

        <TextView
            android:id="@+id/tvInformationUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFormat"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Unggah bukti atau surat tugas anda sebagai ketua rt / rw yang valid untuk mengakses layanan ini."
            android:textColor="@color/color_text_2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnUploadVerif"
            style="@style/ItemsTouchable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInformationUpload"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/tvBtnUploadVerif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:text="Unggah Bukti Verifikasi"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>